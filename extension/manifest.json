{
    "manifest_version": 3,
    "name": "Dark pattern detecter",
    "version": "1.0.0",
    "description": "Find Dark patternss",
    "action":{
        "default_popup":"index.html"
    },
    "permissions":[
        "scripting"
    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
          "matches": ["https://www.amazon.in/*"],
          "js": ["amazon.js"]
        },
        {
          "matches": ["https://www.flipkart.com/*"],
          "js": ["flipkart.js"]
        },
        {
          "matches": ["https://www.ebay.com/*"],
          "js": ["ebay.js"]
        }
    ],
    "icons": {
        "128": "icon.png"
     },
     "author": "Trijal Shinde"

}
